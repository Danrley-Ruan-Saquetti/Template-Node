{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ES6"
        ],
        "module": "CommonJS",
        "rootDir": "./src",
        "moduleResolution": "node",
        "types": [
            "node",
            "@prisma/client"
        ],
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@database": [
                "./src/app/database/index.ts"
            ],
            "@util/*": [
                "./src/app/util/*"
            ],
            "@module/*": [
                "./src/app/modules/*"
            ],
            "@service/*": [
                "./src/app/services/*"
            ],
            "@@types/*": [
                "./src/@types/*"
            ]
        }
    },
    "exclude": [
        "./public",
        "./dist",
        "./src/@types",
        "./**/*.spec.ts",
        "./**/*.d.ts",
        "prisma"
    ]
}